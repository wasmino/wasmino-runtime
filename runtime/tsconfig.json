{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es5",
		"module": "CommonJS",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"ESNext",
			"dom"
		],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"outDir": "dist/lib"
	},
	"include": [
		"src"
	]
}